# Enhanced Smart Meter Simulator Configuration for P2P Energy Trading

# === Simulation Settings ===
SIMULATION_INTERVAL=15  # seconds between readings
NUM_METERS=20          # number of meters to simulate
OUTPUT_FILE=./data/meter_readings.jsonl

# === Service Connection Settings (optional) ===
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
DATABASE_URL=postgresql://p2p_user:p2p_password@localhost:5432/p2p_energy_trading
TIMESCALE_URL=postgresql://timescale_user:timescale_password@localhost:5433/p2p_timeseries

# === Solar Panel Configuration ===
SOLAR_PANEL_EFFICIENCY_MIN=0.85
SOLAR_PANEL_EFFICIENCY_MAX=0.95
BASE_GENERATION_MIN=3.0  # kWh minimum solar generation capacity
BASE_GENERATION_MAX=15.0 # kWh maximum solar generation capacity

# === Energy Consumption Configuration ===
BASE_CONSUMPTION_MIN=1.5 # kWh minimum consumption
BASE_CONSUMPTION_MAX=8.0 # kWh maximum consumption
NOISE_FACTOR_MIN=0.05
NOISE_FACTOR_MAX=0.15

# === P2P Trading Configuration ===
MIN_SELL_PRICE=0.15      # USD per kWh minimum selling price
MAX_SELL_PRICE=0.35      # USD per kWh maximum selling price
MIN_BUY_PRICE=0.20       # USD per kWh minimum buying price
MAX_BUY_PRICE=0.40       # USD per kWh maximum buying price
GRID_FEED_IN_RATE=0.12   # USD per kWh grid feed-in rate
GRID_PURCHASE_RATE=0.28  # USD per kWh grid purchase rate

# === Weather Simulation Weights ===
WEATHER_SUNNY_WEIGHT=0.4
WEATHER_PARTLY_CLOUDY_WEIGHT=0.3
WEATHER_CLOUDY_WEIGHT=0.15
WEATHER_OVERCAST_WEIGHT=0.1
WEATHER_RAINY_WEIGHT=0.05

# === Battery Storage Configuration ===
BATTERY_CAPACITY_MIN=10.0    # kWh minimum battery capacity
BATTERY_CAPACITY_MAX=30.0    # kWh maximum battery capacity
BATTERY_EFFICIENCY_MIN=0.90  # Battery round-trip efficiency minimum
BATTERY_EFFICIENCY_MAX=0.95  # Battery round-trip efficiency maximum

# === Meter Type Distribution ===
SOLAR_PROSUMER_RATIO=0.40    # 40% solar prosumers
GRID_CONSUMER_RATIO=0.35     # 35% grid consumers
HYBRID_PROSUMER_RATIO=0.20   # 20% hybrid prosumers (solar + battery)
BATTERY_STORAGE_RATIO=0.05   # 5% battery storage providers

# === University PoA Configuration ===
UNIVERSITY_VALIDATOR_ENDPOINT=http://localhost:8899
ENGINEERING_DEPT_AUTHORITY=true
REC_CERTIFICATION_ENABLED=true
CARBON_OFFSET_RATE=0.7       # kg CO2 offset per kWh renewable energy

# === Monitoring and Logging ===
LOG_LEVEL=INFO
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60     # seconds
PROMETHEUS_METRICS_ENABLED=true

# === InfluxDB Time-Series Database (Enabled by default) ===
INFLUXDB_ENABLED=true        # Set to false to disable InfluxDB storage
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your-influxdb-token-here
INFLUXDB_ORG=gridtokenx
INFLUXDB_BUCKET=meter_readings_2y

# === IEEE 2030.5 Smart Energy Profile ===
IEEE2030_5_ENABLED=true     # Set to false to disable IEEE 2030.5 protocol
IEEE2030_5_HOST=0.0.0.0
IEEE2030_5_PORT=8443

# === API Server Configuration ===
API_PORT=4040               # Port for the REST API server

# === Development and Testing ===
SIMULATION_SPEED_MULTIPLIER=1.0  # 1.0 = real-time, >1.0 = faster simulation
RANDOM_SEED=42                   # for reproducible testing
WEATHER_CHANGE_FREQUENCY=5       # cycles between weather changes
ENABLE_MARKET_DYNAMICS=true      # simulate price fluctuations
